<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    android:backgroundTint="#63FFFFFF"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etLista"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:hint="Ingrese Numero" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="@string/BtnAgregar" />

    <Button
        android:id="@+id/btnOrdenar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="@string/BtnOrdenar" />

    <Button
        android:id="@+id/btnOrdenarDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="@string/BtnOrdenarDesc" />

    <ListView
        android:id="@+id/lvDatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>

